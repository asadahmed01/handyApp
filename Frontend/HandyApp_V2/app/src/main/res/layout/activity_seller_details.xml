<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.SellerDetailsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seller_listing_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/back_white" />

    <TextView
        android:id="@+id/seller_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:text="@string/plumbing"
        android:textSize="24sp"
        />

        <TextView
            android:id="@+id/sellerprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_black"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="252dp" />
        <Button
            android:id="@+id/make_payment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Send Amount"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_black"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="252dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        >


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/secondlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_circular"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="28dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="2dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/specificSeller"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background"
                    app:riv_border_color="@color/white"
                    app:riv_oval="true" />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_circular"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="John Smith"

                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/appCompatRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/skills"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="4" />

                <TextView
                    android:id="@+id/skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_username"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="24dp"
                    android:text="Painter"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/secondlinear"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="7dp"
                android:text="Preparing and cleaning surfaces
        Removing old wallpaper and paint
        Repairing cracks and holes in walls
        Mixing and thinning paint"
                android:gravity="left"
                android:textSize="17dp" />

            <Button
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:padding="5dp"
                android:text="Contact Seller"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/review_heading"
                android:layout_below="@+id/contact"
                android:text="Review"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/review_heading"
                android:layout_marginTop="10dp"
                android:id="@+id/reviews">



            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>



</ScrollView>